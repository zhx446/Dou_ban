/**index.wxss**/

page {
    font-family: 微软雅黑;
}

.movie-container {
    display: flex;
    flex-direction: column;
    /* 主轴 */
    justify-content: center;
    /* 交叉轴 */
    align-items: center;
}

.search-bg {
    width: 100%;
    height: 60rpx;
    background-color: #42BD55;
}

.search {
    width: 95%;
    height: 50rpx;
    margin: 0 auto;
    background-color: #fff;
    text-align: center;
    font-size: 28rpx;
    color: #C6C6C6;
    line-height: 50rpx;
    border-radius: 10rpx;
}

.hot-show-title {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx 20rpx;
    color: #505050;
    font-weight: bold;
}

.hot-show-title text:last-child {
    color: #42BD55;
}